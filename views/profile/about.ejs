<!-- head is started here -->
<%- include('../common/_header.ejs') %>
    <title>About - <%= user.username %>
    </title>
    <link rel="stylesheet" href="/css/profileAbout.css">
    <link rel="stylesheet" href="/css/rating.css">
    <link rel="stylesheet" href="/css/reviewBoxes.css">
    </head>

    <body>
        <%- include('../common/_navBar.ejs') %>
            <div class="container contentBody">
                <section class="profileInfo">
                    <div class="basicInfo">
                        <div class="profilePicture">
                            <img class="rounded-image" src="/uploads/<%= about.profile_picture %>" alt="">
                        </div>
                        <div class="nameAndBtn">
                            <h3 class="name">
                                <%= about.full_name %>
                            </h3>
                            <% if(user.id==about.id){ %>
                                <a href="/profile/update/<%= about.id %> " class="btn btn-primary">Update Profile</a>
                                <% } %>
                        </div>
                    </div>
                    <div class="moreInfo">
                        <h3>More About <%= about.username %>
                        </h3>
                        <div class="option">
                            <span class="optionTitle">Hometwon</span>
                            <span class="optionValue">:
                                <%= about.hometown %>
                            </span>
                        </div>
                        <div class="option">
                            <span class="optionTitle">Country</span>
                            <span class="optionValue">:
                                <%= about.country %>
                            </span>
                        </div>
                        <div class="option">
                            <span class="optionTitle">BirthDate</span>
                            <span class="optionValue">:
                                <%= about.birthdate %>
                            </span>
                        </div>
                        <div class="option">
                            <span class="optionTitle">Hobby</span>
                            <span class="optionValue">:
                                <%= about.hobby %>
                            </span>
                        </div>
                        <div class="option">
                            <span class="optionTitle">Phone</span>
                            <span class="optionValue">:
                                <%= about.phone_number %>
                            </span>
                        </div>
                        <div class="option">
                            <span class="optionTitle">Email</span>
                            <a href="mailto:<%= about.email %>">:
                                <%= about.email %>
                            </a>
                        </div>
                    </div>
                </section>
                <section id="reviews">
                    <% for( let index=0; index < about.reviews.length; index++ ) { %>
                        <div class="reviewBox">
                            <div class="previewImage">
                                <img src="/uploads/<%= about.reviews[index].images[0] %> " alt="PreviewImage">
                            </div>
                            <div class="previewArticle">
                                <span class="title">
                                    <%= about.reviews[index].title %>
                                </span>
                                <span class="experience">
                                    <%- about.reviews[index].shorten %>
                                </span>
                                <div class="rating">
                                    <% for( let i=0; i < about.reviews[index].location_rating; i++ ) { %>
                                        <span class="fa fa-star checked"></span>
                                        <% } %>
                                            <% for( let i=0; i < 6-about.reviews[index].location_rating; i++ ) { %>
                                                <span class="fa fa-star"></span>
                                                <% } %>
                                </div>
                                <div class="buttons">
                                    <a href="/review/show/<%= about.reviews[index].id %>"
                                        class="btn btn-primary">Show</a>
                                    <% if (user.id==about.id) { %>
                                        <a href="/review/edit/<%= about.reviews[index].id %>"
                                            class="btn btn-primary">Edit</a>
                                        <a href="/review/delete/<%= about.reviews[index].id %>"
                                            class="btn btn-primary">Delete</a>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </section>
            </div>
            <%- include('../common/_footer.ejs') %>
    </body>

    </html>